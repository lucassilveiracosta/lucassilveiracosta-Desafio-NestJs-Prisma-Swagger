generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              Int          @id @default(autoincrement())  //essencial
  fullName        String
  email           String       @unique
  password        String
  cpf             String       @unique
  phoneNumber     String
  birthDate       DateTime           
  createdAt       DateTime     @default(now())                //essencial
  updatedAt       DateTime     @updatedAt                     //essencial    

  //Relacionamento inverso: um usuario tem muitos eventos, então coloca [] para representar um array
  events          Event[]   

  @@map("users") //Decorator do prisma para mapear no banco diretamente para tabela users
}

model Event {
  id              Int          @id @default(autoincrement())
  title           String    
  description     String?      // ? -> espaço não obrigatório
  startDateTime   DateTime
  endDateTime     DateTime
  status          Status       @default(SCHEDULED)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  //Relacionamento
  userId          Int  //FK
  user            User         @relation(fields: [userId], references: [id])

  @@map("events") //Decorator do prisma para mapear no banco diretamente para tabela events
}

enum Status {
  SCHEDULED
  COMPLETED
  CANCELED
}
